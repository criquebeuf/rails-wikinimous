<h1>New article</h1>

<%= form_with model: @article do |f| %>
<div class="mb-3">
  <%= f.label :title %>
  <%= f.text_field :title, class:"form-control" %>
</div>
  <div class="mb-3">
  <%= f.label :content %>
  <%= f.text_area :content, class:"form-control", id:"exampleFormControlTextarea1", rows:"3" %>
</div>
  <%= f.submit %>
<% end %>
</div>

<div><%= link_to "Back to list", articles_path %></div>
